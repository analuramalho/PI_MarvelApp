<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fullscreen.view.FullscreenImageFragment"
    android:background="@color/color_gray_dark">

    <ImageView
        android:id="@+id/icCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_close_24"
        android:contentDescription="@string/close_icon"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:tint="@color/color_white" />

    <ImageView
        android:id="@+id/imgFullscreen"
        android:layout_width="@dimen/dimen_350dp"
        android:layout_height="@dimen/dimen_550dp"
        android:padding="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dim_40dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        app:layout_goneMarginBottom="90dp"
        android:contentDescription="@string/fullscreen_image_dialog"
        android:background="@color/color_white"
        tools:src="@drawable/i_wolverine"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icCloseDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_100dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>