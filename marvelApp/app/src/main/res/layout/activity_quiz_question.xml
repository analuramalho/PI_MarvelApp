<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/color_gray_dark"
    tools:context=".quiz.QuizQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/dimen_16dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_22sp"
            android:text="@string/question"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="500dp"
            android:layout_height="@dimen/dimen_100dp"

            android:layout_marginTop="@dimen/dimen_16dp"
            android:src="@drawable/marvel_logo"/>

        <LinearLayout
            android:id="@+id/progress_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ProgressBar
                android:id="@+id/progressBarQuestions"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:minHeight="@dimen/dimen_50dp"
                android:progress="0"
                android:indeterminate="false"/>

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_15dp"
                android:textColorHint="@color/color_black"
                android:textSize="@dimen/dimen_14sp"
                tools:text="0/10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_18sp"
            android:text="@string/marvel"/>

        <TextView
            android:id="@+id/tv_option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_18sp"
            android:text="@string/marvel"/>

        <TextView
            android:id="@+id/tv_option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_18sp"
            android:text="@string/marvel"/>

        <TextView
            android:id="@+id/tv_option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_18sp"
            android:text="@string/marvel"/>

        <TextView
            android:id="@+id/tv_option_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dimen_18sp"
            android:text="@string/marvel"/>

    </LinearLayout>

</ScrollView>